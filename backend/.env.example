# Environment Configuration
NODE_ENV=development
PORT=5000

# Database (SQLite)
DATABASE_PATH=./data/flowsync.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SendGrid or SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@flowsync.com
SMTP_FROM_NAME=FlowSync

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AWS S3 (Optional - for production file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=flowsync-files
# AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Deadline Checker (cron schedule)
DEADLINE_CHECK_INTERVAL=0 * * * *
